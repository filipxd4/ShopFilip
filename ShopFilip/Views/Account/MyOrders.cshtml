@model IEnumerable<ShopFilip.Models.OrderProduct>
@{
    ViewData["Title"] = ViewContext.RouteData.Values["action"].ToString();
}
<div class="container">
    @if (Model.Count() == 0)
    {
        <div style="text-align:center; top: 50%; padding-top:20%;">
            <h1>Nie masz zamówień 😞</h1>
            <div class="submit">
                <input type="submit" value="Wróć" class="btn btn-default" onclick="goBack()" />
            </div>
        </div>
    }
    else
    {
        <table class="table table-striped table-sm">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Informacje</th>
                    <th>Data</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.OrderId
                        </td>
                        <td>
                            @if (item.PoductQuantityAtribute.Count() == 0 || item.PoductQuantityAtribute == null)
                            {
                                <span>Brak produktu</span>
                            }
                            else
                            {
                                @foreach (var itemo in item.PoductQuantityAtribute)
                                {

                                    foreach (var itema in itemo.Product)
                                    {
                                        <span>@itema.Name</span>
                                        <span>@item.OrderStatus</span>
                                        <span>@itemo.Quantity</span>
                                        <img src="@itema.Photos[0].Value" width="100" />
                                    }

                                }
                            }

                        </td>
                        <td>
                            @item.OrderDate
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
<script>
    function goBack() {
        window.history.back();
    }
</script>
