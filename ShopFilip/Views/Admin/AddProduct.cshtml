    $("#submit-form").click(function () {
        SubmitForm()
    });

    $("#add-table").click(function () {
        GetTables()
    });

    $("#button-add-table").click(function () {
        var a = $('input[name="test"]:checked').val();
        document.getElementById('table-photo-add').defaultValue = a;
        $("#table-added").html(""); 
