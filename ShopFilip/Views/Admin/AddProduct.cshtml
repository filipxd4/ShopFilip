@model ShopFilip.Models.Product
<link href="https://cdnjs.cloudflare.com/ajax/libs/fotorama/4.6.4/fotorama.css" rel="stylesheet">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-modal/0.9.1/jquery.modal.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-modal/0.9.1/jquery.modal.min.css" />
<style>
    input[type="file"] {
        display: none;
    }

    input[name="quantity"] {
        width: 60px;
        border: 4px solid gray;
    }

    #description {
        border: 4px solid gray;
    }

    #name, #price {
        border: 4px solid gray;
    }

    .label {
        border: 1px solid #ccc;
        display: inline-block;
        padding: 6px 12px;
        cursor: pointer;
        border-radius: 5px;
        border: solid gray 4px;
    }

        .label:hover {
            color: white;
            background-color: gray;
        }

    .modal {
        z-index: 3;
        overflow: visible;
    }

    #radio {
        position: absolute;
        opacity: 0;
        width: 0;
        height: 0;
    }

    [type=radio] + img {
        cursor: pointer;
        margin: 2px;
    }

    [type=radio]:checked + img {
        outline: 2px solid #f00;
    }

    .button-style {
        border-radius: 5px;
        color: black;
        padding: .5em;
        text-decoration: none;
        border: solid gray 4px;
    }

    #photo-min-product {
        -webkit-filter: grayscale(100%);
        filter: grayscale(100%);
    }

    .gallery {
        display: flex;
    }

    #photo {
        margin: 5px;
        position: relative;
    }

    #x {
        position: absolute;
        background: white;
        color: black;
        top: -10px;
        right: -10px;
        z-index: 1;
        cursor: pointer;
        border: 4px solid #808080;
        border-radius: 25px;
    }

        #x:hover {
            color: white;
            background: #808080;
        }

    #modal-set-center {
        position: absolute;
        left: 50%;
        top: 50%;
        transform: translate(-50%, -50%);
        z-index: 9999;
        bottom: auto;
        padding-bottom: 0;
        padding-top: 0;
    }

    .row {
        border: solid gray 4px;
        border-radius: 16px;
    }

    #add-table:hover {
        color: white;
        background-color: gray;
        text-decoration: none;
    }

    #cancel {
        color: black;
        border: solid red 4px;
    }
        #cancel:hover {
            background-color: red;
            color: white;
        }
    #submit-form {
        color: black;
        border: solid green 4px;
    }

        #submit-form:hover {
            background-color: green;
            color: white;
        }
</style>
<div class="container">
    <h1>Dodaj nowy produkt</h1>
    <form>
        <div class="row">
            <div class="col-md-4">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input hidden id="idOfProoduct" value="" />
                <div class="form-group">
                    <h4>Nazwa</h4>
                    <input asp-for="@Model.Name" id="name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <h4>Cena</h4>
                    <input asp-for="Price" id="price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="container">
                        Mężczyzna
                        <input type="radio" checked="checked" name="gender" value="man">
                        <span class="checkmark"></span>
                    </label>
                    <label class="container">
                        Kobieta
                        <input type="radio" name="gender" value="woman">
                        <span class="checkmark"></span>
                    </label>
                </div>
                <div class="form-group">
                    <h4>Rozmiary</h4>
                    <label class="container">
                        M
                        <input class="size-container" type="checkbox" name="size" value="M">
                        <input style="display:none" min="0" type="number" name="quantity">
                        <span class="checkmark"></span>
                    </label>
                    <label class="container">
                        L
                        <input class="size-container" type="checkbox" name="size" value="L">
                        <input style="display:none" min="0" type="number" name="quantity">
                        <span class="checkmark"></span>
                    </label>
                    <label class="container">
                        XL
                        <input class="size-container" type="checkbox" name="size" value="XL">
                        <input style="display:none" min="0" type="number" name="quantity">
                        <span class="checkmark"></span>
                    </label>
                    <label class="container">
                        XXL
                        <input class="size-container" type="checkbox" name="size" value="XXL">
                        <input style="display:none" min="0" type="number" name="quantity">
                        <span class="checkmark"></span>
                    </label>
                </div>
                <div class="form-group">
                    <h4>Grupa</h4>
                    <label class="container">
                        <input type="radio" checked="checked" name="group" value="Koszule">
                        Koszule
                        <span class="checkmark"></span>
                    </label>
                    <label class="container">
                        <input type="radio" name="group" value="Spodnie">
                        Spodnie
                        <span class="checkmark"></span>
                    </label>
                    <label class="container">
                        <input type="radio" name="group" value="T-Shirt">
                        T-Shirt
                        <span class="checkmark"></span>
                    </label>
                    <label class="container">
                        <input type="radio" name="group" value="Kurtki">
                        Kurtki
                        <span class="checkmark"></span>
                    </label>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <h4>Opis</h4>
                    <textarea asp-for="Description" id="description" class="form-control" rows="5"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="label" for="gallery-photo-add">Dodaj zdjęcia</label>
                    <input type="file" multiple id="gallery-photo-add">
                    <div class="gallery">

                    </div>
                </div>

                <div class="form-group">
                    <input asp-for="Table" id="table-photo-add" value="Table" hidden>
                    <div id="table-added">

                    </div>
                </div>
                <p><a class="button-style" href="#modal-open" id="add-table" rel="modal:open">Dodaj tabele</a></p>
            </div>

        </div>
    </form>
    <div id="modal-open" class="modal">
        <p>Wybierz już istniejącą tabele</p>
        <div id="photos">

        </div>
        <a class="button-style" href="#" rel="modal:close" id="button-add-table">Add Table</a>
        <label class="label" for="add-new-table">Dodaj Nową tabele</label>
        <input type="file" id="add-new-table">
    </div>

    <div style="display: flex; width: 100%">
        <div style="width:50%;padding-top:10px;display:flex;justify-content:flex-start">
            <button class="btn" id="cancel" type="submit" onclick="goBack()">
                Anuluj
            </button>
        </div>
        <div style="width:50%;padding-top:10px;display:flex;justify-content:flex-end;">
            <button class="btn" type="submit"  id="submit-form">
                Zapisz!
            </button>
        </div>
    </div>
</div>

<div class="modal fade" id="modal-set-center">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body">
                <p>Sucess!&hellip;</p>
            </div>
            <div class="modal-footer">
                <button type="button" onclick="location.href='@Url.Action("Index", "Admin")'" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
<script src="~/js/CustomJavaScripts.js"></script>
<script src="~/lib/jquery/dist/jquery.js"></script>
