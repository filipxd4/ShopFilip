@model ShopFilip.Models.Product
<link href="https://cdnjs.cloudflare.com/ajax/libs/fotorama/4.6.4/fotorama.css" rel="stylesheet">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-modal/0.9.1/jquery.modal.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-modal/0.9.1/jquery.modal.min.css" />
<style>
    input[type="file"] {
        display: none;
    }

    .label {
        border: 1px solid #ccc;
        display: inline-block;
        padding: 6px 12px;
        cursor: pointer;
    }

    .modal {
        overflow: visible;
        z-index: 3;
    }
    /* HIDE RADIO */
    #radio {
        position: absolute;
        opacity: 0;
        width: 0;
        height: 0;
    }

    /* IMAGE STYLES */
    [type=radio] + img {
        cursor: pointer;
        margin: 2px;
    }

    /* CHECKED STYLES */
    [type=radio]:checked + img {
        outline: 2px solid #f00;
    }

    .buttona {
        background-color: Crimson;
        border-radius: 5px;
        color: white;
        padding: .5em;
        text-decoration: none;
    }

    #photoMin {
        -webkit-filter: grayscale(100%);
        filter: grayscale(100%);
    }

    .gallery {
        display: flex;
    }

    #photo {
        margin: 5px;
        position: relative;
    }

    #x {
        position: absolute;
        background: red;
        color: white;
        top: -10px;
        right: -10px;
        z-index: 1;
        cursor: pointer;
    }

    #myModalSetMain {
        position: absolute;
        left: 50%;
        top: 50%;
        transform: translate(-50%, -50%);
        z-index: 9999;
        bottom: auto;
    }
</style>
<div class="container">
    <h1>Add ProductsData</h1>
    <form>
        <div class="row">
            <div class="col-md-4">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input hidden id="idOfProoduct" value=""/>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="@Model.Name" id="name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" id="price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="container">
                        Man
                        <input type="radio" checked="checked" name="gender" value="man">
                        <span class="checkmark"></span>
                    </label>
                    <label class="container">
                        Woman
                        <input type="radio" name="gender" value="woman">
                        <span class="checkmark"></span>
                    </label>
                </div>
                <div class="form-group">
                    <h4>Rozmiary</h4>
                    <label class="container">
                        M
                        <input class="aa" type="checkbox" name="size" value="M">
                        <input class="bb" style="display:none" min="0" type="number" name="quantity">
                        <span class="checkmark"></span>
                    </label>
                    <label class="container">
                        L
                        <input class="aa" type="checkbox" name="size" value="L">
                        <input class="bb" style="display:none" min="0" type="number" name="quantity">
                        <span class="checkmark"></span>
                    </label>
                    <label class="container">
                        XL
                        <input class="aa" type="checkbox" name="size" value="XL">
                        <input class="bb" style="display:none" min="0" type="number" name="quantity">
                        <span class="checkmark"></span>
                    </label>
                    <label class="container">
                        XXL
                        <input class="aa" type="checkbox" name="size" value="XXL">
                        <input class="bb" style="display:none" min="0" type="number" name="quantity">
                        <span class="checkmark"></span>
                    </label>
                </div>

                <div class="form-group">
                    <h4>Grupa</h4>
                    <label class="container">
                        <input type="radio" checked="checked" name="group" value="Koszule">
                        Koszule
                        <span class="checkmark"></span>
                    </label>
                    <label class="container">
                        <input type="radio" name="group" value="Spodnie">
                        Spodnie
                        <span class="checkmark"></span>
                    </label>
                    <label class="container">
                        <input type="radio" name="group" value="T-Shirt">
                        T-Shirt
                        <span class="checkmark"></span>
                    </label>
                    <label class="container">
                        <input type="radio" name="group" value="Kurtki">
                        Kurtki
                        <span class="checkmark"></span>
                    </label>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="Description" class="control-label">Comment:</label>
                    <textarea asp-for="Description" id="description" class="form-control" rows="5" ></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="label" for="gallery-photo-add">Dodaj Zdjęcia</label>
                    <input type="file" name="pic" multiple id="gallery-photo-add">
                    <div class="gallery" id="gal">
                     
                    </div>
                </div>

                <div class="form-group">
                    <input asp-for="Table" name="tbl" id="table-photo-add" value="Table" hidden>
                    <div id="tableAdded">
                      
                    </div>
                </div>
                <p><a class="buttona" href="#ex1" id="bb" rel="modal:open">Dodaj Tabele</a></p>
            </div>
            <div class="form-group">
                <input type="button" onClick='submitDetailsForm()' class="btn btn-default" />
            </div>
        </div>
    </form>
    <div id="ex1" class="modal">
        <p>Wybierz już istniejącą tabele</p>
        <div id="photos">

        </div>
        <a class="buttona" href="#" rel="modal:close" id="ggg">Add Table</a>
        <label class="label" for="addNewToTable">Dodaj Nową tabele</label>
        <input type="file" name="pic" id="addNewToTable">
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="myModalSetMain">
    <div class="modal-dialog">
        <div class="modal-content">
