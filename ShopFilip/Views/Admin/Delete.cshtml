@model ShopFilip.Models.Product

@{
    ViewData["Title"] = "Delete";
}
@{
    ViewData["Title"] = ViewContext.RouteData.Values["action"].ToString();
}
<div class="container">
    <h3>Czy napewno chcesz usunąć ten przedmiot?</h3>
    <div>
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Group)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Group)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Price)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Price)
            </dd>
        </dl>
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Usuń" class="btn btn-default" /> |
            <a asp-action="AllProducts">Cofnij do wszystkich produktów</a>
        </form>
    </div>
</div>

